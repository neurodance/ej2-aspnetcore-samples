@section ControlsSection{
    @{
        var labelFont = new Syncfusion.EJ2.LinearGauge.LinearGaugeLabel { Font = new Syncfusion.EJ2.LinearGauge.LinearGaugeFont { FontFamily = "inherit" } };
        var titleStyle = new Syncfusion.EJ2.LinearGauge.LinearGaugeTitleStyleLinearGauge { FontFamily = "inherit", FontWeight = "499" };
    }
    <div class="control-section">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12"
             style="display: flex;justify-content: center; align-items: center;">
                <div style="margin: auto;padding: 10px;">
                    <table>
                        <tbody>
                            <tr>
                                <td>
                                    <div id='horizontal' style="padding:6px;cursor:pointer;width:86px;color:black;font-size:15px;border:1px solid #0074E3;background-color:white;text-align:center">
                                        Horizontal
                                    </div>
                                </td>
                                <td>
                                    <div id='vertical' style="padding:6px;cursor:pointer;width:86px;color:white;font-size:15px;border:1px solid #0074E3;background-color: #0074E3;text-align:center">
                                        Vertical
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <pre style="background-color: inherit; border:hidden"></pre>
        <div id="containerBox" style="float: left;"></div>
        <div id='textWidget1' class="col-xs-5 col-sm-5 col-lg-4 col-md-4" style="display: flex;justify-content: center; align-items: center;">
            <ejs-lineargauge load="gaugeLoad" id='textWidget' Background='Transparent' Title='Text widget'
                         TitleStyle='titleStyle' Height='350px' Width="170px" style='display:block;' Orientation='Vertical'>
                <e-lineargauge-axes>
                    <e-lineargauge-axis Minimum="0" Maximum="100" OpposedPosition="true" labelStyle="labelFont">
                        <e-axis-majorticks Interval="20" Height="7" Width="1"></e-axis-majorticks>
                        <e-axis-minorticks Interval="10" Height="3"></e-axis-minorticks>
                        <e-axis-line Width="20"></e-axis-line>
                        <e-lineargauge-pointers>
                            <e-lineargauge-pointer Type="Marker" MarkerType=Circle Value="55" Offset="-2" Color="#173BBB" Width=30 Position=Cross Placement=Center></e-lineargauge-pointer>
                        </e-lineargauge-pointers>
                    </e-lineargauge-axis>
                </e-lineargauge-axes>
                <e-lineargauge-annotations>
                    <e-lineargauge-annotation Content='<div style=" font-size: 12px;color: white;margin-left: -2px;margin-top: -1px;"> 55 </div>' X="0" Y="0" AxisValue=55 AxisIndex=0 ZIndex="1"></e-lineargauge-annotation>
                </e-lineargauge-annotations>
            </ejs-lineargauge>
        </div>
        <div id='iconWidget1' class="col-xs-5 col-sm-5 col-lg-4 col-md-4" style="display: flex;justify-content: center; align-items: center;">
            <ejs-lineargauge load="gaugeLoad" id='iconWidget' Background='Transparent' Title='Icon widget'
                         TitleStyle='titleStyle' Height='350px' Width="170px" style='display:block;' Orientation='Vertical'>
                <e-lineargauge-axes>
                    <e-lineargauge-axis Minimum="0" Maximum="100" OpposedPosition="true" labelStyle="labelFont">
                        <e-axis-majorticks Interval="20" Height="7" Width="1"></e-axis-majorticks>
                        <e-axis-minorticks Interval="10" Height="3"></e-axis-minorticks>
                        <e-axis-line Width="20"></e-axis-line>
                        <e-lineargauge-pointers>
                            <e-lineargauge-pointer Type="Marker" MarkerType=Image ImageUrl="../styles/images/lineargauge/thumb-icon.png" Value="90" Height=30 Width=45 Placement=Near></e-lineargauge-pointer>
                        </e-lineargauge-pointers>
                    </e-lineargauge-axis>
                </e-lineargauge-axes>
            </ejs-lineargauge>
        </div>
        <div id='multipleWidget1' class="col-xs-5 col-sm-5 col-lg-4 col-md-4" style="display: flex;justify-content: center; align-items: center;">
            <ejs-lineargauge load="gaugeLoad" id='multipleWidget' Title='Multiple widget pointers'
                         TitleStyle='titleStyle' Height='350px' Width="170px" style='display:block;' Background='Transparent'
                         Orientation='Vertical'>
                <e-lineargauge-axes>
                    <e-lineargauge-axis Minimum="0" Maximum="100" OpposedPosition="true" labelStyle="labelFont">
                        <e-axis-majorticks Interval="20" Height="7" Width="1"></e-axis-majorticks>
                        <e-axis-minorticks Interval="10" Height="3"></e-axis-minorticks>
                        <e-axis-line Width="20"></e-axis-line>
                        <e-lineargauge-pointers>
                            <e-lineargauge-pointer Type="Marker" MarkerType=Circle Value="60" Offset="-2" Color="#173BBB" Width=30 Position=Cross Placement=Center></e-lineargauge-pointer>
                            <e-lineargauge-pointer Type="Marker" MarkerType=Image ImageUrl="../styles/images/lineargauge/thumb-icon.png" Value="30" Color="#173BBB" Height=30 Width=45 Placement=Near></e-lineargauge-pointer>
                        </e-lineargauge-pointers>
                    </e-lineargauge-axis>
                </e-lineargauge-axes>
                <e-lineargauge-annotations>
                    <e-lineargauge-annotation Content='<div style="font-size: 12px;color: white;margin-left: -2px;margin-top: -1px;"> 60 </div>' X="0" Y="0" AxisValue=60 AxisIndex=0 ZIndex="1"></e-lineargauge-annotation>
                </e-lineargauge-annotations>
            </ejs-lineargauge>
        </div>
    </div>
    <!-- custom code start -->
    <style>
        .control-section {
            min-height: 450px;
        }
    </style>
    <!-- custom code end -->
}

<script>
    var textWidgetGauge, iconWidgetGauge, multipleWidgetGauge;
    window.gaugeLoad = function (args) {
    @* custom code start *@
        var theme = themeName ? themeName : 'Material';
        args.gauge.theme = (theme.charAt(0).toUpperCase() +
            theme.slice(1)).replace(/-dark/i, 'Dark').replace(/contrast/i, 'Contrast');
    @* custom code end *@
        args.gauge.animationDuration = 3000;
        if (args.gauge.element.id === 'textWidget') {
            textWidgetGauge = args.gauge;
        }
        if (args.gauge.element.id === 'iconWidget') {
            iconWidgetGauge = args.gauge;
        }
        if (args.gauge.element.id === 'multipleWidget') {
            multipleWidgetGauge = args.gauge;
        }
    }

    document.addEventListener("DOMContentLoaded", function () {
        document.getElementById('horizontal').addEventListener('click', function () {
             textWidgetGauge.width = iconWidgetGauge.width = multipleWidgetGauge.width = "450px";
        textWidgetGauge.height = iconWidgetGauge.height = multipleWidgetGauge.height = "150px";
        textWidgetGauge.orientation = iconWidgetGauge.orientation = multipleWidgetGauge.orientation = "Horizontal";
        textWidgetGauge.axes[0].pointers[0].offset = 2;
        multipleWidgetGauge.axes[0].pointers[0].offset = 2;
        document.getElementById('horizontal').style.color = "white";
            document.getElementById('horizontal').style.backgroundColor = "#0074E3";
            document.getElementById('vertical').style.color = "black";
            document.getElementById('vertical').style.backgroundColor = "white";
            document.getElementById('textWidget1').className = document.getElementById('iconWidget1').className =
                document.getElementById('multipleWidget1').className = "col-xs-12 col-sm-12 col-lg-12 col-md-12";
        });
        document.getElementById('vertical').addEventListener('click', function () {
            textWidgetGauge.width = iconWidgetGauge.width = multipleWidgetGauge.width = "170px";
        textWidgetGauge.height = iconWidgetGauge.height = multipleWidgetGauge.height = "350px";
        textWidgetGauge.orientation = iconWidgetGauge.orientation = multipleWidgetGauge.orientation = "Vertical";
        textWidgetGauge.axes[0].pointers[0].offset = -2;
        multipleWidgetGauge.axes[0].pointers[0].offset = -2;
        document.getElementById('vertical').style.color = "white";
                document.getElementById('vertical').style.backgroundColor = "#0074E3";
            document.getElementById('horizontal')['style']['color'] = "black";
            document.getElementById('horizontal')['style']['backgroundColor'] = "white";
            document.getElementById('textWidget1').className = document.getElementById('iconWidget1').className =
                document.getElementById('multipleWidget1').className = "col-xs-5 col-sm-5 col-lg-4 col-md-4";
        });
    });

</script>

@section Meta{
    <meta name="description" content="This example demonstrates the Custom Pointer in ASP.NET Core LinearGauge control. Explore here for more details." />
                }
@section ActionDescription{
    <div id="action-description">
        <p>
            This sample demonstrates the inclusion of text and image pointers in the linear gauge. Additionally, multiple pointer support is enabled.
        </p>
    </div>
}
