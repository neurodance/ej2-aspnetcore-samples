    <title>ASP.NET Core LinearGauge Custom Pointer Example - Syncfusion Demos </title>
                }
@section Header{
    <h1 class='sb-sample-text'>Example of Custom Pointer in ASP.NET Core LinearGauge Control</h1>
                }